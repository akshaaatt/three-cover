{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "include": ["components"],
  "exclude": ["node_modules", "dist"]
}
